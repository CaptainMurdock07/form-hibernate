<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="hibernate.connection.password">secret</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
        <property name="hibernate.connection.username">la300</property>
        <property name="hbm2ddl.auto">create</property>
		<property name="show_sql">true</property>
        <mapping class = "com.example.entities.Voiture" />
        <mapping class = "com.example.entities.Personne" />
        <mapping class = "com.example.entities.Enseignant" />
        <mapping class = "com.example.entities.Etudiant" />
        <mapping class = "com.example.entities.Sport" /> 
    </session-factory>
</hibernate-configuration>
